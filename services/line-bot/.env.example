# アプリケーション設定
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# LINE Bot設定
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# データベース接続情報
DATABASE_URL="mysql://username:password@localhost:3306/gibtee"

# AWS S3設定
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=gibtee-images

# 画像処理サービス
IMAGE_PROCESSOR_URL=http://localhost:3001/api/images
IMAGE_PROCESSOR_API_KEY=your_api_key_here

# Slack通知設定
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXX/YYYY/ZZZZ
SLACK_CHANNEL=#gibtee-notifications
SLACK_USERNAME=gibtee-bot

# Stripe API設定
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# セキュリティ設定
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# ESModule関連設定
# ts-nodeがESMモードで動作するための設定
TS_NODE_TRANSPILE_ONLY=true
TS_NODE_FILES=true
TS_NODE_PROJECT=./tsconfig.json

# Node.jsネイティブESMロードのソースマップサポート
NODE_OPTIONS=--enable-source-maps
